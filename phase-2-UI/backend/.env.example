# Database Configuration
# Use Neon pooled connection string for serverless PostgreSQL
DATABASE_URL=postgresql+asyncpg://user:password@ep-xxx-pooler.region.aws.neon.tech/dbname?sslmode=require

# Authentication
# Shared secret with Better-Auth frontend for JWT validation
BETTER_AUTH_SECRET=your-shared-secret-key-here-min-32-chars

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,https://your-frontend.com

# API Configuration
API_VERSION=1.0.0
DEBUG=false
